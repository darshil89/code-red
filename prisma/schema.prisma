datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  name      String
  number    String
  password  String
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Mentor {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String
  name       String
  number     String
  password   String
  role       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  position   String
  experience String
}

model Employer {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String
  Companyname String
  comapnySize String
  street      String
  city        String
  state       String
  zip         String
  country     String
  password    String
  role        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
